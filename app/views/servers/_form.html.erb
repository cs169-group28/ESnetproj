<%= form_for(@server) do |f| %>
  <% if @server.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@server.errors.count, "error") %> prohibited this server from being saved:</h2>

      <ul>
      <% @server.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :hostname %><br />
    <%= f.text_field :hostname %>
  </div>

  <div class="field">
    <%= f.label :ip %><br />
    <%= f.text_field :ip %>
  </div>

  <div class="checkbox">
    <% @categoriesList.each do |category| %>
      <% if @checkedCategoriesList.include?(category) %>
      <%= f.check_box category, {checked:true} %>
      <% else %>
      <%= f.check_box category, {checked:false} %>
      <% end %>
      <%= f.label category %>

    <% end %>
  </div>

  <button class="btn btn-primary" type="submit" id="create_server">Save Server</button>
<% end %>
