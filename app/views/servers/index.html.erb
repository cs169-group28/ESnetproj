<!--The server index-->
<h1>List of Servers</h1>

<form method="link" action="servers/new">
  <button class="btn btn-primary">New Server</button>
</form>
<br/>
<table class="table table-striped table-bordered table-condensed server">
  <tr>
    <th>Hostname</th>
    <th>Ip</th>
    <th>Server Actions</th>
  </tr>

  <% @servers.each do |server| %>
    <tr>
      <td><%= server.hostname %></td>
      <td><%= server.ip %></td>    
      <td id="actions">
        <div class="btn-group">
          <button class="btn dropdown-toggle" data-toggle="dropdown">
            Actions
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Show', server %></li>
            <li><%= link_to 'Edit', edit_server_path(server) %></li>
            <li><%= link_to 'Remove', server, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div>
      </td>
    </tr>
    <% end%>
</table>



